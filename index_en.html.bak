  <script>
    // Translations
    const translations = {
      en: {
        title: "Welcome to NEXUTHA",
        subtitle: "AI platform for the future",
        button: "Get Started",
        langBtn: "日本語",
        music: "🎧 Latest Music Releases",
        engraving: "Laser Engraving Art",
        note: "Note Articles",
        team: "Our Team",
        contact: "Contact Us",
        features: ["Instant Insight", "Future Design"],
        descriptions: [
          "Real-time AI supports your decisions.",
          "Tools that expand individual potential."
        ]
      },
      ja: {
        title: "ようこそ、NEXUTHAへ",
        subtitle: "未来を創るAIプラットフォーム",
        button: "はじめる",
        langBtn: "ENGLISH",
        music: "🎧 音楽リリース",
        engraving: "レーザー彫刻アート",
        note: "Note記事",
        team: "私たちのチーム",
        contact: "お問い合わせ",
        features: ["即時インサイト", "未来設計"],
        descriptions: [
          "リアルタイムAIが意思決定を支援。",
          "個人の可能性を広げるツール。"
        ]
      }
    };
    let lang = "en";
    function switchLanguage() {
      lang = lang === "ja" ? "en" : "ja";
      const t = translations[lang];
      document.getElementById("main-title").innerText = t.title;
      document.getElementById("subtitle").innerText = t.subtitle;
      document.getElementById("main-button").innerText = t.button;
      document.getElementById("lang-switch").innerText = t.langBtn;
      document.querySelector(".music-links h2").innerText = t.music;
      document.querySelector(".laser-engraving h2").innerText = t.engraving;
      document.querySelector(".note-articles h2").innerText = t.note;
      document.querySelector(".team h2").innerText = t.team;
      document.querySelector("#contact h2").innerText = t.contact;
      document.querySelectorAll(".feature-title").forEach((el, i) => el.innerText = t.features[i]);
      document.querySelectorAll(".feature-desc").forEach((el, i) => el.innerText = t.descriptions[i]);
    }

    // Hamburger Menu
    const hamburger = document.querySelector('.hamburger');
    const navMenu = document.querySelector('nav ul');
    hamburger.addEventListener('click', () => {
      navMenu.classList.toggle('active');
      hamburger.querySelectorAll('div').forEach(div => div.classList.toggle('open'));
    });

    // AI Summary Toggle
    document.querySelectorAll('.ai-btn').forEach(btn => {
      btn.addEventListener('click', () => {
        const target = document.getElementById(btn.dataset.target);
        target.classList.toggle('show');
      });
    });

    // Contact Form (Local Processing)
    document.getElementById('contact-form').addEventListener('submit', e => {
      e.preventDefault();
      const name = document.getElementById('name').value;
      const email = document.getElementById('email').value;
      const message = document.getElementById('message').value;
      console.log('Form submitted locally:', { name, email, message });
      alert('Message processed locally! No data sent.');
      e.target.reset();
    });

    // Canvas Animation (5 Orbs)
    const canvas = document.getElementById("bg");
    const ctx = canvas.getContext("2d");
    canvas.width = window.innerWidth;
    canvas.height = window.innerHeight;

    const orbs = Array(5).fill().map(() => ({
      x: Math.random() * canvas.width,
      y: Math.random() * canvas.height,
      hue: 0,
      speed: Math.random() * 2 + 1,
      radius: Math.random() * 20 + 10,
      isMoving: false
    }));

    let mouse = { x: 0, y: 0 };
    document.addEventListener("mousemove", e => {
      mouse.x = e.clientX;
      mouse.y = e.clientY;
      orbs[0].isMoving = true;
    });

    function animate() {
      ctx.fillStyle = "rgba(0, 0, 0, 0.1)";
      ctx.fillRect(0, 0, canvas.width, canvas.height);
      orbs.forEach((orb, index) => {
        if (index === 0) {
          orb.x += (mouse.x - orb.x) * 0.1;
          orb.y += (mouse.y - orb.y) * 0.1;
          orb.hue = orb.isMoving ? (orb.hue + orb.speed) % 360 : 240;
        } else {
          orb.hue = (orb.hue + orb.speed) % 360;
        }
        const gradient = ctx.createRadialGradient(orb.x, orb.y, 0, orb.x, orb.y, orb.radius);
        gradient.addColorStop(0, `hsl(${orb.hue}, 100%, 70%)`);
        gradient.addColorStop(1, "transparent");
        ctx.fillStyle = gradient;
        ctx.beginPath();
        ctx.arc(orb.x, orb.y, orb.radius, 0, Math.PI * 2);
        ctx.fill();
        orb.isMoving = false;
      });
      requestAnimationFrame(animate);
    }
    animate();

    window.addEventListener("resize", () => {
      canvas.width = window.innerWidth;
      canvas.height = window.innerHeight;
    });
  </script>
</body>
</html>
